@model List<Product>
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">All Products</h2>
</div>
<div class="row">
    <div class="col-md-12">
        <a href="@Url.Action("AddProduct", "Admin")" class="btn btn-primary">Add New Product</a>
        <table class="table table-bordered table-striped text-center mt-3">
            <thead>
                <tr>
                    <th>Product Name</th>
                    <th>Product Price</th>
                    <th>Product Image</th>
                    <th>Options</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pro in Model)
                {
                    <tr>
                        <td>@pro.product_name</td>
                        <td>@pro.product_price</td>
                        <td><img src="@("~/product_images/"+pro.product_image)" alt="Product Image" asp-append-version="true" height="40px" width="40px"/></td>
                        <td>
                            <a href="@Url.Action("ProductDetails", "Admin", new { id = @pro.product_id })" class="btn btn-primary">Details</a>
                            <a href="@Url.Action("UpdateProduct", "Admin", new { id = @pro.product_id })" class="btn btn-warning">Update</a>
                            <a href="@Url.Action("DeletePermissionProduct", "Admin", new { id = @pro.product_id })" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>