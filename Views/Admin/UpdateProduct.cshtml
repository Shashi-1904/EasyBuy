@model Product
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase" style="letter-spacing:4px">Update Product</h2>
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-md-8">
        <form method="post">
            <input type="hidden" name="product_id" value="@Model.product_id" />
            <input type="text" placeholder="Enter Product Name" name="product_name" value="@Model.product_name" class="form-control my-3" />
            <input type="text" placeholder="Enter Product Price" name="product_price" value="@Model.product_price" class="form-control my-3" />
            <input type="text" placeholder="Enter Product Description" name="product_description" value="@Model.product_description" class="form-control my-3" />
            @Html.Partial("CategoryDropdown", ViewData["category"])
            <input type="hidden" name="product_image" value="@Model.product_image" />
            <input type="submit" value="Update Product" class="form-control my-3 btn btn-primary" />
        </form>
        <form method="post" asp-action="ChangeProductImage" enctype="multipart/form-data">
            <input type="hidden" name="product_id" value="@Model.product_id" />
            <input type="hidden" name="product_name" value="@Model.product_name" />
            <input type="hidden" name="product_price" value="@Model.product_price" />
            <input type="hidden" name="product_description" value="@Model.product_description" />
            <input type="hidden" name="cat_id" value="@Model.cat_id"/>
            <input type="file" name="product_image" class="form-control my-3" value="" />
            <img src="@("~/product_images/" + Model.product_image)"
                 asp-append-version="true"
                 class="img-thumbnail"
                 style="width:150px;height:150px;object-fit:cover;"
                 alt="Product Image" />
            <input type="submit" value="Change Product Image" class="form-control my-3 btn btn-primary" />
        </form>
    </div>
    <div class="col-md-2"></div>
</div>