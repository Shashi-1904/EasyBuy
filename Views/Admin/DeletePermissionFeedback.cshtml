@model Feedback
<div class="container-fluid px-4">
    <h2 class="mt-4 text-center text-uppercase text-danger" style="letter-spacing:4px">Are you sure want to delete this Feedback!!</h2>
</div>
<div class="row mb-5">
    <div class="col-md-2">
    </div>
    <div class="col-md-8">
        <ul class="list-group my-3">
            <li class="list-group-item">Feedback Id: @Model.feedback_id</li>
            <li class="list-group-item">User Name: @Model.user_name</li>
            <li class="list-group-item">User Message: @Model.user_message</li>
        </ul>
        <a href="@Url.Action("DeleteFeedback", "Admin", new { id = Model.feedback_id })" class="btn btn-danger">Delete Feedback</a>
        <a href="@Url.Action("fetchFeedback", "Admin")" class="btn btn-warning">Back to List</a>
    </div>
    <div class="col-md-2"></div>
</div>