
@{
    ViewData["Title"] = "CustomerProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<Customer>
@if (TempData["ProfileUpdateSuccessMsg"] != null)
{
    <div id="successAlert"
         class="alert alert-success mt-3"
         role="alert">
        @TempData["ProfileUpdateSuccessMsg"]
    </div>

    <script>
        setTimeout(function () {
            var alert = document.getElementById('successAlert');
            if (alert) {
                alert.style.display = 'none';
            }
        }, 5000); // 10 seconds
    </script>
}
<div class="container">
    <div class="row mt-3">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <form asp-action="ChangeProfileImage" method="post" enctype="multipart/form-data">
                <img src="@("~/customer_images/"+Model[0].constomer_image)" alt="Profile Image" asp-append-version="true" style="height:200px;width:200px"/>
                <input type="file" name="constomer_image" value="" />
                <input type="hidden" name="constomer_id" value="@Model[0].constomer_id" />
                <input type="hidden" name="constomer_name" value="@Model[0].constomer_name" placeholder="Enter Your Name" class="form-control mb-3" />
                <input type="hidden" name="constomer_phone" value="@Model[0].constomer_phone" placeholder="Enter Your Phone" class="form-control mb-3" />
                <input type="hidden" name="constomer_email" value="@Model[0].constomer_email" placeholder="Enter Your Email" class="form-control mb-3" />
                <input type="hidden" name="constomer_password" value="@Model[0].constomer_password" placeholder="Enter Your Password" class="form-control mb-3" />
                <input type="hidden" name="constomer_gender" value="@Model[0].constomer_gender" placeholder="Enter Your Password" class="form-control mb-3" />
                <input type="hidden" name="constomer_country" value="@Model[0].constomer_country" placeholder="Enter Your Country" class="form-control mb-3" />
                <input type="hidden" name="constomer_city" value="@Model[0].constomer_city" placeholder="Enter Your City" class="form-control mb-3" />
                <input type="hidden" name="constomer_address" value="@Model[0].constomer_address" placeholder="Enter Your Address" class="form-control mb-3" />
                <input type="submit" class="btn btn-primary" value="Change Image" />
            </form>
            <h4 class="text-center">Customer Profile</h4>
            <form method="post" asp-action="UpdateProfile">
                <input type="hidden" name="constomer_id" value="@Model[0].constomer_id" />
                <input type="text" name="constomer_name" value="@Model[0].constomer_name" placeholder="Enter Your Name" class="form-control mb-3" />
                <input type="text" name="constomer_phone" value="@Model[0].constomer_phone" placeholder="Enter Your Phone" class="form-control mb-3" />
                <input type="email" name="constomer_email" value="@Model[0].constomer_email" placeholder="Enter Your Email" class="form-control mb-3" />
                <input type="text" name="constomer_password" value="@Model[0].constomer_password" placeholder="Enter Your Password" class="form-control mb-3" />
                @Html.DropDownList(
                "constomer_gender",
                                new SelectList(
                                new[] { "Male", "Female", "Other" },
                                Model[0].constomer_gender
                                ),
                                "-- Select Gender --",
                                new { @class = "form-control mb-3" }
                                )
                <input type="text" name="constomer_country" value="@Model[0].constomer_country" placeholder="Enter Your Country" class="form-control mb-3" />
                <input type="text" name="constomer_city" value="@Model[0].constomer_city" placeholder="Enter Your City" class="form-control mb-3" />
                <input type="text" name="constomer_address" value="@Model[0].constomer_address" placeholder="Enter Your Address" class="form-control mb-3" />
                <input type="hidden" name="constomer_image" value="@Model[0].constomer_image" class="form-control mb-3" />
                <input type="submit" class="btn btn-primary" value="Update Profile"/>
            </form>
        </div>
        <div class="col-md-2"></div>
    </div>
</div>

