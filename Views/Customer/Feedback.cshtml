
@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (TempData["feedmsg"] != null)
{
    <div id="successAlert"
         class="alert alert-success mt-3"
         role="alert">
        @TempData["feedmsg"]
    </div>

    <script>
        setTimeout(function () {
            var alert = document.getElementById('successAlert');
            if (alert) {
                alert.style.display = 'none';
            }
        }, 5000); // 10 seconds
    </script>
}
<h2 class="mt-4 text-center fw-bold">Get In Touch With Us</h2>

<div class="container my-5">
    <div class="row g-4 align-items-center">

        <!-- Contact Form -->
        <div class="col-md-5">
            <div class="card shadow-sm p-4">
                <h5 class="mb-3 text-center text-success fw-semibold">Send us a message</h5>

                <form method="post">
                    <input type="text"
                           placeholder="Enter Your Full Name"
                           name="user_name"
                           class="form-control mb-3" />

                    <textarea class="form-control mb-3"
                              placeholder="Enter Your Message"
                              name="user_message"
                              rows="4"></textarea>

                    <button type="submit"
                            class="btn btn-success w-100 fw-semibold">
                        Submit
                    </button>
                </form>
            </div>
        </div>

        <!-- Spacer (optional) -->
        <div class="col-md-1 d-none d-md-block"></div>

        <!-- Map -->
        <div class="col-md-6">
            <div class="card shadow-sm p-2">
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d6211.37321880358!2d73.7363456766571!3d18.585488029836437!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3bc2bbe8c9bda71d%3A0xed1f51fc88fd8550!2sCognizant%20Office%20-%20Phase%201!5e0!3m2!1sen!2sin!4v1766582207850!5m2!1sen!2sin"
                        width="100%"
                        height="300"
                        class="rounded"
                        style="border:0;"
                        allowfullscreen
                        loading="lazy"
                        referrerpolicy="no-referrer-when-downgrade">
                </iframe>
            </div>
        </div>

    </div>
</div>


